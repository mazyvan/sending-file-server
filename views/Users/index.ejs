<div class="container">
	<br>
	<div class="jumbotron">
		<h2><center>Eddy SÃ¡nchez's Sending File Server</center></h2>
  		<div class="col-xs-10 col-sm-11"></div><div class="col-xs-2 col-sm-1"><a class="btn btn-info" href="/">Home</a></div>
	</div>
	<div class="container">
			<% _.each(dirs, function (dirs) { %>
				<div class="row">
					<form name='myform' action="/" method="GET" class="form-signin">
						<input type="hidden" name="dirs" value="<%= dirs %>">

						<div class="col-sm-1 col-xs-2 isFolder">
							<center><span class="label">Folder</span></center>
						</div>
						<div class="col-sm-11 col-xs-10">
							<button class="btn btn-link btn-sm" type="submit"><%= dirs.substring(route.length) %></button>
						</div>	
					</form>
				</div>
			<%});%>
			<STYLE TYPE="text/css">
			.isFile{
				background-color: #5bc0de;
			}
			.isFolder{
				background-color: #f0ad4e;
			}
			</STYLE>

			<% _.each(files, function (file) { %>
				<div class="row">
					<div class="col-sm-1 col-xs-2 isFile">
						<center><span class="label">File</span></center>
					</div>
					<div class="col-sm-11 col-xs-10">
						<a href="<%= file.substring(6) %>" title="Descargar <%= file.substring(route.length+1) %>" download class="btn btn-link btn-sm"><%= file.substring(route.length+1) %></a>
					</div>
				</div>
			<%});%>

		<br>
		<center><button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
		  Enviar Archivos
		</button></center>
		<br><br>


		<!-- Modal -->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Enviar Archivos al Servidor</h4>
		      </div>
		      <form action="/send" enctype="multipart/form-data" method="post">

			     <div class="modal-body">
			      		<div class="form-group">
			      			<input class="btn btn-link btn-sm" required type="file" name="avatar" multiple="multiple">
			      		</div>
						<!--<div class="form-group">
						    <div class="col-sm-offset-3 col-sm-6">
						        <input class="form-control" required name="pass" type="password" placeholder="Password">
						    </div>
						</div>
						<br>-->
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
			        <button type="submit" class="btn btn-primary">Enviar</button>
			      </div>
			  </form>

		    </div>
		  </div>
		</div>


	</div>
</div>